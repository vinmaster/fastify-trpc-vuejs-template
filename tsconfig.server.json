/// <reference types="vite/client" />
{
  "compilerOptions": {
    "rootDir": "src/server",
    "outDir": "build",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/server/*"
      ]
    }
  },
  "include": [
    "src/server/**/*.ts"
  ],
}