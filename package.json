{
  "name": "fastify-trpc-vuejs-template",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "vite build --config vite.config.client.ts --ssrManifest",
    "build-server": "tsc --build tsconfig.server.json",
    "clean": "rm -rf build",
    "start": "node build/index.js",
    "start-prod": "cross-env NODE_ENV=production npm start",
    "heroku-postbuild": "npm run build",
    "dev": "concurrently \"npm:dev-*\"",
    "dev-client": "vite --config vite.config.client.ts",
    "dev-server": "cross-env NODE_ENV=development ts-node-dev --project tsconfig.server.json --respawn ./src/server/index.ts",
    "bak-dev-server": "cross-env NODE_ENV=development ts-node-dev --project tsconfig.server.json --respawn --transpile-only ./src/server/index.ts",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "engines": {
    "node": ">=17.0.0",
    "npm": ">=8.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^9.1.0",
    "@fastify/static": "^6.4.0",
    "@fastify/websocket": "^6.0.1",
    "@trpc/client": "^9.25.3",
    "@trpc/server": "^9.25.3",
    "@types/node": "^18.0.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "cross-env": "^7.0.3",
    "fastify": "^4.2.0",
    "pino-pretty": "^8.1.0",
    "superjson": "^1.9.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vite-plugin-node": "^1.0.0",
    "vue": "^3.2.37",
    "vue-router": "^4.0.16",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "ts-node-dev": "^2.0.0",
    "vitest": "^0.17.0"
  }
}
